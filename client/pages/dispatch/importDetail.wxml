<view class="area">
  <view class="text" width="100%">
    <view class="item">
      <text class="item-title">款号</text>
      <input bindblur="codeInput" class="item-value" placeholder="输入款号"/>  
      <text wx:if="{{!existedModel}}" class="item-picker"></text>
    </view>
    <view class="item">
      <text class="item-title">名称</text>
      <input wx:if="{{!existedModel}}" bindblur="nameInput" class="item-value" placeholder="输入或者选择名称" value="{{modelName}}"/>  
      <picker wx:if="{{!existedModel}}" bindchange="nameInput" class="item-picker" id="p" range="{{modelNameList}}">  
        <text>选择</text>  
      </picker>  
      <text wx:if="{{existedModel}}" class="item-value">{{model.name}}</text>
    </view>
    <block wx:for="{{style}}" wx:key="{{styleid}}">
    <view class="item">
      <text class="item-title">{{item.stylename}}</text>
      <input wx:if="{{!existedModel}}" bindblur="styleInput" class="item-value" id="{{item.styleid}}" placeholder="{{item.styleplaceholder}}" value="{{styleValue[item.styleid]}}"/>  
      <picker wx:if="{{!existedModel}}" bindchange="stylePicker" class="item-picker" id="{{item.styleid}}" range="{{styleList[item.styleid]}}">  
        <text>选择</text>  
      </picker>  
      <text wx:if="{{existedModel}}" class="item-value">{{model.style1}}</text>
    </view>
    </block>
    <view class="item">
      <text class="item-title">成本</text>
      <input wx:if="{{!existedModel}}" bindblur="costInput" class="item-value" type="digit" placeholder="输入成本价(可选)" value="{{modelCost}}"/>  
      <text wx:if="{{!existedModel}}" class="item-picker"></text>
      <text wx:if="{{existedModel}}" class="item-value">{{model.cost}}</text>
    </view>
    <view class="item">
      <text class="item-title">价格</text>
      <input wx:if="{{!existedModel}}" bindblur="priceInput" class="item-value" type="digit" placeholder="输入标牌价格" value="{{modelPrice}}"/>  
      <text wx:if="{{!existedModel}}" class="item-picker"></text>
      <text wx:if="{{existedModel}}" class="item-value">{{model.price}}</text>
    </view>
    <view class="item">
      <text class="item-title">数量</text>
      <input bindblur="amountInput" class="item-value" type="number" placeholder="输入进货数量" value="{{amount}}"/>  
      <text class="item-picker"></text>
    </view>
    <button bindtap="addDetail" class="add" type="primary">{{existedModel ? '更新进货数量':'新的进货条目'}}</button>
  </view>
</view>
