/* importList.wxss */

page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.area {
    margin-top: 30rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.text {
    background: #FFF;
    width: 100%;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: column;
    align-items: left;
}

.item {
    font-size: 17pt;
    width: 100%;
    background: #FFF;
    border: 8px;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.item-title {
    width:51pt;
    margin: 20rpx;
    align-items: middle;
}

.item-value {
    color: #007AFF;
}

.item-picker {
    width:34pt;
    margin: 20rpx;
    color: #FF7700;
}

.delete {
    font-size: 17pt;
    height: 100%;
    align-items: right;
}
.add {
    font-size: 17pt;
    height: 100%;
    width: 100%;
    align-items: center;
}
