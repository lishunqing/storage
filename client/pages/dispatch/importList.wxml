<block wx:for="{{list}}" wx:key="{{dispatchlistid}}">
  <view class="area">
    <view class="text">
      <view class="item">
        <text class="item-title">时间</text>
        <text class="item-value">{{item.createtime}}</text>
      </view>
      <view class="item">
        <text class="item-title">地点</text>
        <text class="item-value">{{item.tostore}}</text>
      </view>
    </view>
    <button class="delete" bindtap="delBind" type="warn" id="{{index}}">删除</button>
  </view>
      <view class="item">
        <text class="item-title">备注</text>
        <text class="item-value">{{item.remark}}</text>
      </view>
</block>

<view class="area">
  <view class="text" width="100%">
    <view class="item">
      <text class="item-title">地点</text>
      <picker bindchange="storeChange" class="item-value" value="{{storeindex}}" range="{{storeName}}">  
        <view class="picker">  
          {{storeName[storeindex]}}  
        </view>  
      </picker>  
    </view>
    <view class="item">
      <text class="item-title">备注</text>
      <input bindinput="remarkInput" class="item-value" placeholder="进货备注"/>
    </view>
    <button bindtap="addBind" class="add" type="primary">新的进货单</button>
  </view>
</view>
