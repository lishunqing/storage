<block wx:for="{{list}}" wx:key="{{importlistid}}">
  <view class="area">
    <view class="text" bindtap="toDetail" id="{{index}}">
      <view class="item">
        <text class="item-title">时间</text>
        <text class="item-value">{{item.createtime}}</text>
      </view>
      <view class="item">
        <text class="item-title">种类</text>
        <text class="item-value">{{item.tenantname}}</text>
      </view>
    </view>
    <button class="delete" bindtap="delBind" type="warn" id="{{index}}">删除</button>
  </view>
      <view class="item" bindtap="toDetail" id="{{index}}">
        <text class="item-title">备注</text>
        <text class="item-value">{{item.remark}}</text>
      </view>
</block>

<view class="area">
  <view class="text" width="100%">
    <view class="item">
      <text class="item-title">种类</text>
      <picker bindchange="tenantChange" class="item-value" value="{{index}}" range="{{tenantName}}">  
        <view class="picker">  
          {{tenantName[index]}}  
        </view>  
      </picker>  
    </view>
    <view class="item">
      <text class="item-title">备注</text>
      <input bindinput="remarkInput" class="item-value" placeholder="进货备注，可以不填。"/>
    </view>
    <button bindtap="addBind" class="add" type="primary">新的进货单</button>
  </view>
</view>
