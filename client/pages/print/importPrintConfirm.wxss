  text-align: center;
  width:13vw;
}
.tdstyle2 {  
  padding: 1vw;
  border-right: 1px solid black;
  text-align: center;
  width:9vw;
}
.tdprice {  
  padding: 1vw;
  border-right: 1px solid black;
  text-align: center;
  width:10vw;
}
.tdtotal {  
  padding: 1vw;
  border-right: 1px solid black;
  text-align: center;
  width:9vw;
}
.tdarrived {  
  padding: 1vw;
  border-right: 1px solid black;
  text-align: center;
